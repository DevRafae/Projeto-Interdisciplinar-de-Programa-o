#include <stdio.h>
#include <stdlib.h>
#include <string.h>

typedef struct nomealuno {   // nÃ³ da lista
    int RA;
    char nome [50];
    struct nomealuno *prox;
} nomealuno;

typedef struct listanomes {  // lista em si
    nomealuno *prim;
} listanomes;

void criaLista(listanomes *lista) {
    lista->prim = NULL;
}

void insereIni(listanomes *lista, int n, const char*c) {
    nomealuno *novo = (nomealuno*) malloc(sizeof(nomealuno));
    novo -> RA = n;
    strcpy(novo->nome, c);
    novo->prox = lista->prim;
    lista->prim = novo;
}

void mostraLista(listanomes *lista) {
    nomealuno *p;
    for(p = lista->prim; p != NULL; p = p->prox) {
        printf("nome: %s\tRA: %d\n", p->nome, p->RA);
    }
}

int estaVazia(listanomes *lista) {
    return (lista->prim == NULL);
}

int main() {
    listanomes lista;         // Declara a lista
    criaLista(&lista);      // Inicializa a lista vazia

   
 insereIni(&lista,33773,"Rafinha");
        // Mostra todos os elementos
         mostraLista(&lista); 

    if (estaVazia(&lista))
        printf("Lista vazia\n");
    else
        printf("Lista com elementos\n");

    return 0;
}
